<ResourceDictionary xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:DesktopClient.UserInterfaceElements">

  <Design.PreviewWith>
          <controls:UploadContentButton />
  </Design.PreviewWith>
 
  <ControlTheme x:Key="{x:Type controls:UploadContentButton}" TargetType="controls:UploadContentButton">
    <Setter Property="Template">
      <ControlTemplate>
        <Button x:Name="UploadContentButton" 
                Width="44" 
                MaxWidth="44" 
                MinWidth="44" 
                Command="{TemplateBinding Command}"
                Flyout="{TemplateBinding Flyout}">
          <StackPanel Orientation="Horizontal">
            <Label Classes="ButtonIcon" Content="&#xE4C0;"></Label>
          </StackPanel>
          <Button.Styles>
            <Style Selector="Button#UploadContentButton">
              <Setter Property="BorderBrush" Value="Black"></Setter>
              <Setter Property="BorderThickness" Value="1"></Setter>
              <Setter Property="Background" Value="{DynamicResource PltOrangeS2}"/>
              <Setter Property="Foreground" Value="Black"/>
            </Style>

            <Style Selector="Button#UploadContentButton:pointerover /template/ ContentPresenter#PART_ContentPresenter">
              <Setter Property="BorderBrush" Value="Black"></Setter>
              <Setter Property="BorderThickness" Value="1"></Setter>
              <Setter Property="Background" Value="{DynamicResource PltOrangeS1}"></Setter>
              <Setter Property="Foreground" Value="Black"/>
            </Style>
          </Button.Styles>
        </Button>
      </ControlTemplate>
    </Setter>
  </ControlTheme>
</ResourceDictionary>
