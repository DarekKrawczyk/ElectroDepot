        <ResourceInclude Source='avares://DesktopClient/UserInterfaceElements/UploadContentButton.axaml' />
        <ResourceInclude Source='avares://DesktopClient/UserInterfaceElements/DeleteButton.axaml' />
        <ResourceInclude Source='avares://DesktopClient/UserInterfaceElements/EditWideButton.axaml' />
        <ResourceInclude Source='avares://DesktopClient/UserInterfaceElements/EditButton.axaml' />
        <ResourceInclude Source='avares://DesktopClient/UserInterfaceElements/PDFButton.axaml' />
        <ResourceInclude Source='avares://DesktopClient/UserInterfaceElements/FirstPageButton.axaml' />
        <ResourceInclude Source='avares://DesktopClient/UserInterfaceElements/LastPageButton.axaml' />
        <ResourceInclude Source='avares://DesktopClient/UserInterfaceElements/NextPageButton.axaml' />
