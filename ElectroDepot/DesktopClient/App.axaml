<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="DesktopClient.App"
             xmlns:themes="using:RangeSlider.Avalonia.Themes.Fluent"
             xmlns:local="using:DesktopClient"
             RequestedThemeVariant="Default">
  <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

  <Application.DataTemplates>
    <local:ViewLocator/>
  </Application.DataTemplates>

  <Application.Styles>
    <FluentTheme/>
    <themes:RangeSliderTheme />
    <StyleInclude Source="avares://AvaloniaProgressRing/Styles/ProgressRing.xaml"/>
    <StyleInclude Source="avares://DesktopClient/Styles/AppDefaultStyles.axaml"/>
    <StyleInclude Source="avares://Notification.Avalonia/Themes/Generic.xaml" />
    <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>

    <!-- MessageBox -->
    <Style Selector="Grid.MsBoxCustomContainer">
      <Setter Property="Background" Value="{DynamicResource SectionGradient}"></Setter>
      <!--<Setter Property="Background">
        <Setter.Value>
          <ImageBrush Source="avares://DesktopClient/Assets/Background_FHD_White.png" AlignmentY="Center"
                                        AlignmentX="Center"
                                        Stretch="UniformToFill"/>
        </Setter.Value>
      </Setter>-->
    </Style>
  </Application.Styles>

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source='avares://DesktopClient/UserInterfaceElements/MinusButton.axaml' />
        <ResourceInclude Source='avares://DesktopClient/UserInterfaceElements/PlusButton.axaml' />
        <ResourceInclude Source='avares://DesktopClient/UserInterfaceElements/UploadFileButton.axaml' />
