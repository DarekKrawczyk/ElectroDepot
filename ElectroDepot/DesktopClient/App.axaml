        <ResourceInclude Source='avares://DesktopClient/UserInterfaceElements/ReportBugButton.axaml' />
        <ResourceInclude Source='avares://DesktopClient/UserInterfaceElements/SaveButton.axaml' />
        <ResourceInclude Source='avares://DesktopClient/UserInterfaceElements/NightModeButton.axaml' />
        <ResourceInclude Source='avares://DesktopClient/UserInterfaceElements/HelpButton.axaml' />
        <ResourceInclude Source='avares://DesktopClient/UserInterfaceElements/AddButton.axaml' />
        <ResourceInclude Source='avares://DesktopClient/UserInterfaceElements/SelectButton.axaml' />
        <ResourceInclude Source='avares://DesktopClient/UserInterfaceElements/CancelButton.axaml' />
