<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Width="500" Height="500" Background="Aqua">
    <Expander>
      <Expander.Header>
        <StackPanel Orientation="Horizontal">
          <Label>Header</Label>
          <Button>Click me</Button>
        </StackPanel>
      </Expander.Header>
      <Label>Content</Label>
    </Expander>
    </Border>
  </Design.PreviewWith>
  
  <Style Selector="Expander">
    <Setter Property="FontSize" Value="18"/>
    <Setter Property="Background" Value="Transparent"/>
  </Style>

  <!-- Pressed State -->
  <Style Selector="Expander:down /template/ ContentPresenter#PART_ContentPresenter">
    <Setter Property="Background" Value="Transparent"/>
  </Style>

  <!-- Pressed State -->
  <Style Selector="Expander:pointerover /template/ ContentPresenter#PART_ContentPresenter">
    <Setter Property="Background" Value="Transparent"/>
  </Style>
</Styles>
